@model IEnumerable<ProyectoGrupo4.Models.Comentario>

<h2 class="mb-4">Comentarios del Blog</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #4A5C6A, #253745); color: white; padding: 20px; border-radius: 15px; text-align: center; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <h5 style="margin-bottom: 10px;">Usuario logueado:</h5>
            <p class="mb-0" style="font-size: 1.2rem; font-weight: bold;">@ViewBag.Usuario</p>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #9BA8AB, #4A5C6A); color: white; padding: 20px; border-radius: 15px; text-align: center; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <h5 style="margin-bottom: 10px;">Total de comentarios:</h5>
            <p class="mb-0" style="font-size: 1.2rem; font-weight: bold;">@ViewBag.TotalComentarios</p>
        </div>
    </div>
</div>

<div class="text-center">
    @Html.ActionLink("Agregar comentario", "Create", null, new { @class = "btn btn-primary", style = "background-color: #11212D; border-color: #11212D; border-radius: 25px; padding: 10px 25px;" })
</div>

<table class="table table-striped table-hover shadow-sm" style="border-radius: 10px; overflow: hidden; border: 1px solid #dee2e6;">
    <thead style="background-color: #11212D; color: white;">
        <tr>
            <th style="padding: 15px; border-bottom: 2px solid #0a171f;">Comentario</th>
            <th style="padding: 15px; border-bottom: 2px solid #0a171f;">Usuario</th>
            <th style="padding: 15px; border-bottom: 2px solid #0a171f;">Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr style="transition: all 0.3s ease;">
                <td style="padding: 15px; border-bottom: 1px solid #dee2e6;">@c.Texto</td>
                <td style="padding: 15px; border-bottom: 1px solid #dee2e6;">@c.User.NombreUsuario</td>
                <td style="padding: 15px; border-bottom: 1px solid #dee2e6;">@c.FechaCreacion</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table tbody tr:hover {
        background-color: #FBE4D8 !important;
        transform: translateX(5px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    body, .card, .form-control, .btn, h2, p, label, .form-label {
        font-family: "Rubik", sans-serif;
    }

</style>