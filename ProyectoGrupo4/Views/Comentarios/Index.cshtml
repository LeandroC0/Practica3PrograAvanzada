@model IEnumerable<ProyectoGrupo4.Models.Comentario>

<h2>Comentarios del Blog</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<p><strong>Usuario logueado:</strong> @ViewBag.Usuario</p>
<p><strong>Total de comentarios:</strong> @ViewBag.TotalComentarios</p>

<p>
    @Html.ActionLink("Agregar comentario", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <tr>
        <th>Comentario</th>
        <th>Usuario</th>
        <th>Fecha</th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Texto</td>
            <td>@c.User.NombreUsuario</td>
            <td>@c.FechaCreacion</td>
        </tr>
    }
</table>
