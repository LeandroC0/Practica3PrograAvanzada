@using ProyectoGrupo4.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
<style>
   
    header, .header, nav, .navbar {
        display: none !important;
    }

    body, .card, .form-control, .btn, h2, p, label, .form-label {
        font-family: "Rubik", sans-serif;
    }

    body {
        padding-top: 0 !important;
        margin: 0 !important;
    }

    .form-control {
        width: 100% !important;
        max-width: 100% !important;
    }

    body {
        background: linear-gradient(135deg, #253745 0%, #4A5C6A 50%, #9BA8AB 75%, #CCD0CF 100%);
    }

</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-5" style="max-width: 650px; width: 100%; border-radius: 18px;">

        <h2 class="text-center mb-3" style="font-weight: bold; color: #253745;">
            Blog
        </h2>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
                               FormMethod.Post, new { @class = "w-100" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.NombreUsuario, new { @class = "form-label", style = "font-size: 1.1rem;" })
                @Html.TextBoxFor(m => m.NombreUsuario,
                    new
                         {
                        @class = "form-control",
                        style = "padding: 10px; font-size: 1.1rem;"
                    })
                @Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Password, new { @class = "form-label", style = "font-size: 1.1rem;" })
                @Html.PasswordFor(m => m.Password,
                    new
                         {
                        @class = "form-control",
                        style = "padding: 10px; font-size: 1.1rem;"
                    })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4 d-flex justify-content-center">
                <div class="form-check">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", style = "transform: scale(1.2);" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label", style = "font-size: 1.1rem; margin-left: 8px;" })
                </div>
            </div>

            <button type="submit" class="btn w-100"
                    style="background-color: #4A5C6A; border-radius: 25px; padding: 14px; font-size: 1.1rem; font-weight: bold; color: white;">
                Iniciar sesión
            </button>

            <p class="text-center mt-4" style="font-size: 1.1rem;">
                ¿No tiene cuenta?
                @Html.ActionLink("Registrarse", "Register", "Account", null, new { @class = "fw-bold", style = "font-size: 1.1rem; color: #253745;" })
            </p>
        }
    </div>
</div>